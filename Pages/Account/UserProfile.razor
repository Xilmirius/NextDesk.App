@page "/account"
@layout MainLayout
@inherits BaseComponentPage

<div class="text-center mx-auto w-50">
    <img src="/images/icon.svg" class="img-fluid w-50" alt="logo">
    <h1 class="card-title">Account</h1>
</div>
<div class="card">
    <div class="card-body">
        <h2 class="card-title">Impostazioni</h2>
        <h4 class="card-header mb-1">@State.CurrentUser.Name</h4>
        <div class="row p-3">
            <button class="btn bg-danger" onclick="@(() => Logout())">Logout</button>
        </div>
    </div>
</div>

